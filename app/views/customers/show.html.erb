<h1><%=@customer.full_name%></h1>
<p>Customer ID: <%=@customer.id%></p>
<p>Email Address: <%=@customer.email%></p>

<h2>Orders:</h2>
<table>
  <tr>
    <th>Order ID</th>
    <th>Date</th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td> <%= link_to order.id, order_path(order) %></td>
    <td> <%=order.order_date%>
  </tr>
  <% end %>

</table>

<a href="/customers">Go back</a>