<link rel="stylesheet" href="style.css">

<h1 class="title is-1">Products</h1>


  <div class="table">
    <table id="products" class="table is-striped is-hoverable is-fullwidth">
      <thead>
        <tr style="columns mb-5">
          <th>Product ID</th>
          <th>Name</th>
          <th>Description</th>
          <th class="has-text-centered">Price</th>
          <th class="has-text-centered">Stock Quantity</th>
          <th >Category</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%=product.id%></td>
            <td><%= link_to product.name, product_path(product)%></td>

            <%unless product.description.blank?%>
            <td><%= product.description %></td>
            <%else%>
            <td>No Description</td>
            <%end%>

            <td class="has-text-centered"><%= number_to_currency(product.price) %></td>
            <td class="has-text-centered"><%= product.stock_quantity %></td>
            <td><%= product.category.category%></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="pagination is-centered" role="navigation" aria-label="pagination">
      <%= paginate @products%>
    </div>
  </div>