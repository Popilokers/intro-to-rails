<h1>Order ID:<%=@order.id%></h1>

<h2>Products:</h2>
<table id="products">
  <thead>
    <tr>
      <th>Product ID</th>
      <th>Title</th>
      <th>Unit Price</th>
      <th>Quantity</th>
      <th>Cost</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%=item.product.id%></td>
        <td><%= link_to item.product.name, product_path(item.product.id)%></td>
        <td><%= number_to_currency(item.product.price) %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency(item.price) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<h2>Total: <%= number_to_currency(@total) %></h2>
<a href="/customers/<%=@order.customer.id%>">Go back</a>